<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CoreTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Lines">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="backgroundColor">@color/black</item>
    </style>

    <style name="Help_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/t_basis</item>
    </style>
</resources>